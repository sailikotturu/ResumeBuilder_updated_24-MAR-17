<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_education"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.sailik.resumebuilder_24_feb.EditEducation">
    <android.support.v7.widget.Toolbar
        android:id="@+id/mytoolbar_education"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <TextView
        android:text="Course Name: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mytoolbar_education"
        android:textSize="18sp"
        android:textStyle="normal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/textColorPrimary"
        android:id="@+id/coursename_label_tv" />

    <EditText

        android:hint="course name here.."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mytoolbar_education"
        android:layout_toRightOf="@+id/coursename_label_tv"
        android:layout_toEndOf="@+id/coursename_label_tv"
        android:inputType="text"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        android:textStyle="italic"
        android:paddingLeft="10dp"
        android:maxLength="20"

        android:textColor="@color/textColorPrimary"
        android:id="@+id/coursename_desc_editText" />
    <TextView
        android:text="College: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/coursename_desc_editText"
        android:layout_alignLeft="@+id/coursename_label_tv"
        android:textSize="18sp"
        android:textStyle="normal"
        android:layout_marginTop="10dp"
        android:textColor="@color/textColorPrimary"
        android:id="@+id/collegename_label_tv" />

    <EditText

        android:hint="college name here..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"

        android:layout_marginTop="5dp"
        android:paddingLeft="10dp"
        android:layout_toEndOf="@+id/collegename_label_tv"
        android:layout_toRightOf="@+id/collegename_label_tv"
        android:layout_below="@+id/coursename_desc_editText"
        android:textSize="15sp"
        android:textStyle="italic"
        android:textColor="@color/textColorPrimary"
        android:maxLength="50"



        android:id="@+id/collegename_desc_editText" />

    <TextView
        android:text="Duration: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/collegename_desc_editText"
        android:layout_alignLeft="@+id/collegename_label_tv"
        android:textSize="18sp"
        android:textStyle="normal"
        android:layout_marginTop="10dp"
        android:textColor="@color/textColorPrimary"
        android:id="@+id/duration_label_tv" />


    <EditText

        android:hint="duration here..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_marginTop="5dp"
        android:paddingLeft="10dp"

        android:layout_toEndOf="@+id/duration_label_tv"
        android:layout_toRightOf="@+id/duration_label_tv"
        android:layout_below="@+id/collegename_desc_editText"
        android:textSize="15sp"
        android:textStyle="italic"
        android:textColor="@color/textColorPrimary"
        android:maxLength="30"


        android:layout_marginRight="20dp"

        android:id="@+id/duration_desc_editText" />

</RelativeLayout>
