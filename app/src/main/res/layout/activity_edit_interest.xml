<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_interest"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.sailik.resumebuilder_24_feb.EditInterest">
    <android.support.v7.widget.Toolbar
        android:id="@+id/mytoolbar_interests"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay" />


    <EditText
        android:text="Interest here.. "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_below="@+id/mytoolbar_interests"
        android:textSize="15sp"
        android:textStyle="italic"
        android:layout_marginLeft="10dp"
        android:maxLength="20"
        android:layout_marginTop="20dp"
        android:textColor="@color/textColorPrimary"
        android:id="@+id/interest_editText" />





</RelativeLayout>
