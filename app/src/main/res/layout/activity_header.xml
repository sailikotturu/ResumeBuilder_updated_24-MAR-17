<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_header"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back"
        tools:context="com.example.sailik.resumebuilder_24_feb.HeaderActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/mytoolbar_header"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay" />




    <TextView
        android:text="Experience: "

        android:layout_below="@id/mytoolbar_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:textSize="18sp"
        android:textColor="@color/textColorPrimary"
        android:textStyle="normal"
        android:id="@+id/exp_label_tv"
        android:layout_marginTop="10dp" />

                <EditText
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:hint="fill here"
                    android:layout_marginTop="10dp"
                    android:inputType="textPersonName"
                    android:id="@+id/exp_editText"
                    android:textSize="15sp"
                    android:textColor="@color/textColorPrimary"
                    android:textStyle="italic"
                    android:maxLength="9"
                    android:layout_below="@id/mytoolbar_header"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/exp_label_tv"
                    android:layout_toEndOf="@+id/exp_label_tv"

                    />







</LinearLayout>


